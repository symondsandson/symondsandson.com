  </div>
</div>

<div id="clients" class="black">

  <div class="centered">
    <div id="testimonials">

      <% data.clients.testimonials.each do |testimonial| %>
        <div class="card">
          <div class="card-interior">
            <%= tag(:img, src: "img/#{testimonial.logo}", alt: testimonial.company, class: 'logo') %>

            <div class="description">"<%= testimonial.description %>"</div>
            <div class="title"><%= testimonial.title %></div>
          </div>
        </div>
      <% end %>
    </div>

    <h5 class="uppercase">Just some of our clients</h5>

    <div id="client_gallery">
      <% data.clients.client_logos.each do |client| %>
        <div class="gallery_item">
          <%= tag(:img, src: "img/#{client.logo}", alt: client.company) %>
        </div>
      <% end %>
    </div>
  </div>

</div>

