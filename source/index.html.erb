<div id="blog">
  <div class="centered">
    <h3>We're Not Just Developers</h3>
    <h4>We're thought leaders of our craft.</h4>
    <div id="quill-divider">
      <span class="line left"></span>
      <span class="line right"></span>
            <%= tag(:img, src: 'img/blog-icon.png') %>
    </div>
    <br/>
    <div id="posts">
      <% data.blog.posts.each do |post| %>
        <div class="post">
          <div class="title"><%= post.title %></div>
          <div class="lede"><%= post.lede %></div>
          <div class="link"><a href=<%= post.url %>>Read More</a></div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div id='have_a_project'>
  <div class="centered">
    <h3>Have a Project?</h3>
    <h4>We'd love to hear the details.</h4>
    <form action="https://symondsandson-contact.herokuapp.com/contact" method="post" id='contact_form'>
      <input type='text' name='name' class='required' placeholder="NAME"/>

      <input type='text' name='phone' placeholder="PHONE"/>

      <input type='text' name='deadline' class="deadline" placeholder="DEADLINE"/>
      <input type='text' name='budget' class="budget"placeholder="BUDGET"/>


      <input type='email' name='email' class='required email' placeholder="EMAIL"/>

      <textarea name='description' class='required' placeholder="DESCRIPTION"></textarea>

      <input class="button" name="send" type="submit" value="Send Message">
    </form>
  </div>
</div>

